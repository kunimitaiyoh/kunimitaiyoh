{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDirs": ["src"],
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "lib": [
        "es5",
        "es6",
        "es7",
        "es2018",
        "dom",
      ],
      "jsx": "react",
      "types":  ["react", "react-dom"],
      "paths": {
        "@/*": ["src/*"],
      },
      "allowJs": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": [
      "dist",
      "node_modules"
    ]
}
